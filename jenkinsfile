pipeline{
    agent any
    stages{
         stage('git clone'){
             steps{
                 git 'https://github.com/rmwirabua/gallery.git'
             }
         }
         stage('Install dependecies'){
             steps{
                 sh 'npm install'
                 sh 'node server.js'
             }
         }
         stage('deploy to heroku'){
             steps{
                 sh 'git push https://git.heroku.com/devopsweek1.git'
             }
         }
    }
}